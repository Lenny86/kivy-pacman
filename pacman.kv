#: kivy 1.7.2

#:set tile_size 28.0

<Hero>:
    size: tile_size, tile_size
    canvas:
        Color:
            rgb: 1, 1, 0
        Ellipse:
            pos: self.x + 0.05 * self.width, self.y + 0.05 * self.height
            size: self.width * 0.9, self.height * 0.9
            angle_start: -60
            angle_end: 240
            segments: 16

<Ghost>:
    size: tile_size, tile_size
    canvas:
        Color:
            rgb: self.color
        Ellipse:
            pos: self.x + 0.05 * self.width, self.y + 0.05 * self.height
            size: self.width * 0.9, self.height * 0.9
            segments: 16
        Quad:
            points: self.center_x, self.center_y, self.x + 0.05 * self.width, self.center_y, self.x + 0.05 * self.width, self.y, self.center_x - 1. / 3 * self.width * 0.9, self.y + 5
        Quad:
            points: self.center_x, self.center_y, self.right - 0.05 * self.width, self.center_y, self.right - 0.05 * self.width, self.y, self.center_x + 1. / 3 * self.width * 0.9, self.y + 5
        Quad:
            points: self.center_x, self.center_y, self.center_x, self.y + 3, self.center_x - 1. / 6 * self.width * 0.9, self.y, self.center_x - 1. / 3 * self.width * 0.9, self.y + 5
        Quad:
            points: self.center_x, self.center_y, self.center_x, self.y + 3, self.center_x + 1. / 6 * self.width * 0.9, self.y, self.center_x + 1. / 3 * self.width * 0.9, self.y + 5
        Color:
            rgb: 1, 1, 1
        Ellipse:
            pos: self.center_x - 1 - 8, self.center_y
            size: 8, 8
        Ellipse:
            pos: self.center_x + 1, self.center_y
            size: 8, 8
        Color:
            rgb: 0, 0, 0
        Ellipse:
            pos: self.center_x - 1 - 6, self.center_y + 2
            size: 4, 4
        Ellipse:
            pos: self.center_x + 1 + 2, self.center_y + 2
            size: 4, 4


<StartScreen>:
    size: 1280, 720

    hero: id_hero
    gred: id_red_ghost

#    canvas:
#        Color:
#            rgb: 0.4, 0.4, 0.4
#        Triangle:
#            points: 580, 350, 560, 360, 560, 340

    Hero:
        id: id_hero
        center_x: self.parent.center_x
        center_y: 9.5 * tile_size

    Ghost:
        id: id_red_ghost
        color: 1, 0, 0
        center_x: root.center_x - 2 * tile_size
        center_y: 9.5 * tile_size

    Ghost:
        id: id_pink_ghost
        color: 1, 0.5, 0.5
        center_x: root.center_x - 2 * tile_size * 2
        center_y: 9.5 * tile_size

    Ghost:
        id: id_blue_ghost
        color: 0, 0.88, 1
        center_x: root.center_x + 2 * tile_size
        center_y: 9.5 * tile_size

    Ghost:
        id: id_oran_ghost
        color: 1, 0.5, 0
        center_x: root.center_x + 2 * tile_size * 2
        center_y: 9.5 * tile_size

    Image:
        source: "img/pacpac_logo.png"
        size: 990, 200
        y: root.top - 100 - self.height
        center_x: root.center_x

    Image:
        source: "img/arrow_keys.png"
        size: 200, 128
        center_x: root.center_x
        y: 80

    Label:
        font_name: "8bitoperator_jve.ttf"
        font_size: 16
        text: "Controls"
        center_x: root.center_x

    Label:
        font_name: "8bitoperator_jve.ttf"
        font_size: 32
        text: "Start"
        center_x: root.center_x
        center_y: 12.5 * tile_size
